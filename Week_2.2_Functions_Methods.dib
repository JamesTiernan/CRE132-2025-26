#!csharp

using Raylib_cs;

static void DrawRect(int x, int y, int width,int height,Color color)
{
    Raylib.DrawRectangle(x,y,width,height,color);
}

Raylib.InitWindow(2000, 2000, "Rectangle Method");
Raylib.SetTargetFPS(60);

int size = 30;


while (!Raylib.WindowShouldClose())
{
    int h = Raylib.GetRandomValue(3,12);
    Raylib.BeginDrawing();
    Raylib.ClearBackground(Color.White);
    
    for (int x = 0; x < 80; x++)
    {
        h += Raylib.GetRandomValue(-1,1);
        for (int y = 0; y < 50; y++)
        {
            if (y == h){DrawRect(x * size, y * size, size,size,Color.Green);}
            else if (y >= 1 + h && y < 5 + h){DrawRect(x * size, y * size, size,size,Color.Brown);}
            else if (y < h){DrawRect(x * size, y * size, size,size,Color.Blue);}
            else {DrawRect(x * size, y * size, size,size,Color.Gray);}
        }
    }
    
    Raylib.EndDrawing();
}

Raylib.CloseWindow();
